            </div>
            <div class="control-group">
                <label class="control-label" for="varianza-metrics">Varianza de la Muestra</label>
                <div class="controls">
                    <input type="text" id="varianza-metrics" 
                    name="varianza-metrics" placeholder="Varianza de la Muestra">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="curtosis-metrics">Curtosis</label>
                <div class="controls">
                    <input type="text" id="curtosis-metrics" 
                    name="curtosis-metrics" placeholder="Curtosis">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="coeficiente-metrics">Coeficiente de asimetría</label>
                <div class="controls">
                    <input type="text" id="coeficiente-metrics" 
                    name="coeficiente-metrics" placeholder="Coeficiente de asimetría">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="rango-metrics">Rango</label>
                <div class="controls">
                    <input type="text" id="rango-metrics" 
                    name="rango-metrics" placeholder="Rango">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="minimo-metrics">Mínimo</label>
                <div class="controls">
                    <input type="text" id="minimo-metrics" 
                    name="minimo-metrics" placeholder="Mínimo">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="maximo-metrics">Máximo</label>
                <div class="controls">
                    <input type="text" id="maximo-metrics" 
                    name="maximo-metrics" placeholder="Máximo">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="total-metrics">Total de Alumnos</label>
                <div class="controls">
                    <input type="text" id="total-metrics" 
                    name="total-metrics" placeholder="Total de Alumnos">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="reprobados-metrics">Reprobados</label>
                <div class="controls">
                    <input type="text" id="reprobados-metrics" 
                    name="reprobados-metrics" placeholder="Reprobados">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="aprobados-metrics">Aprobados</label>
                <div class="controls">
                    <input type="text" id="aprobados-metrics" 
                    name="aprobados-metrics" placeholder="Aprobados">
                </div>
            </div>
        </div>
        <div class="modal-footer">
          <button class="btn"
                data-dismiss="modal"
                aria-hidden="true">{{=T('Close')}}</button>
          <input type="submit"
          onclick="if (
              $('#media-metrics').val()&&
              $('#error-tipico-metrics').val()&&
              $('#mediana-metrics').val()&&
              $('#moda-metrics').val()&&
              $('#desviacion-estandar-metrics').val()&&
              $('#varianza-metrics').val()&&
              $('#curtosis-metrics').val()&&
              $('#coeficiente-metrics').val()&&
              $('#rango-metrics').val()&&
              $('#minimo-metrics').val()&&
              $('#maximo-metrics').val()&&
              $('#aprobados-metrics').val()&&
              $('#reprobados-metrics').val()&&
              parseInt($('#total-metrics').val()) > 0&&
              parseInt($('#total-metrics').val()) ==
                  parseInt($('#aprobados-metrics').val())
                  + parseInt($('#reprobados-metrics').val()))
              return true;
                   else {
                       $('#metrics-error').show();
                       return false;
                   }
                "
              class="btn btn-primary"
                 value="{{=T('Save Changes')}}"></input>
        </div>
    </form>
</div>
<!-- log-new-activity -->
<div id="log-new-activity"
     class="modal hide fade" tabindex="-1"
     role="dialog"
     aria-labelledby="changos"
     aria-hidden="true">
    <form action="{{=URL('log/save', vars=dict(report = report.id))}}" method="POST">
        <div class="modal-header">
            <span class="row-fluid">
                <span class="row">
                    <span class="span3">
                        <h3 id="changos">{{=T('Log Activity')}}</h3>
                    </span>
                    <span class="span8">
                        <div class="input-prepend">
                            <span class="add-on">{{=T('Log Date')}} <span class="icon-calendar"></span></span>
                            <input class="span7" id="log-date" name="log-date" placeholder="{{=T("YYY-MM-DD")}}" type="date">
                        </div>
                        <div><small>{{=T("YYY-MM-DD")}}</small></div>
                    </span>
                    <span class="span1">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    </span>
                </span>
            </span>
        </div>
        <div class="modal-body">
            <div class="alert" style="display:none;" id="log-error">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>{{=T('Alert')}}!</strong> {{=T('All fields are mandatory, please check and try again.')}}
            </div>
            <div class="input-prepend">
                <span class="add-on">{{=T('Type')}}</span>
                <select id="log-type" name="log-type">
                    {{for log_type in log_types:}}
                    <option value = "{{=log_type.id}}">{{=T(log_type.name)}}</option>
                    {{pass}}
                </select>
            </div>
            <textarea id="log-content" name="log-content" class="text"></textarea>
        </div>
        <div class="modal-footer">
          <button class="btn"
                data-dismiss="modal"
                aria-hidden="true">{{=T('Close')}}</button>
          <input type="submit"
          onclick="if ($('#log-type').val()&&
              $('#log-content').val()&&
              $('#log-date').val())
              return true;
                   else{
                       $('#log-error').show();
                       return false;
                   }"
              class="btn btn-primary"
                 value="{{=T('Save Changes')}}"></input>
        </div>
    </form>
</div>
<!-- Helpers end here -->
