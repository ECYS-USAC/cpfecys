<!-- log-desertion-activity -->
<div id="log-desertion-activity"
     class="modal hide fade" tabindex="-1"
     role="dialog"
     aria-labelledby="changos"
     aria-hidden="true">
    <form action="{{=URL('desertion/save', vars=dict(report = report.id))}}" method="POST">
        <div class="modal-header">
            <span class="row-fluid">
                <span class="row">
                    <span class="span3">
                        <h3 id="changos">{{=T('Log Desertion')}}</h3>
                    </span>
                    <span class="span8">
                        <div class="input-prepend">
                            <span class="add-on">{{=T('Log Date')}} <span class="icon-calendar"></span></span>
                            <input class="span7" id="desertion-date" name="desertion-date" placeholder="{{=T("YYY-MM-DD")}}" type="date">
                        </div>
                        <div><small>{{=T("YYY-MM-DD")}}</small></div>
                    </span>
                    <span class="span1">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    </span>
                </span>
            </span>
        </div>
        <div class="modal-body">
            <div class="alert" style="display:none;" id="desertion-error">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>{{=T('Alert')}}!</strong> {{=T('All fields are mandatory, please check and try again.')}}
            </div>
            <div class="control-group">
                <label class="control-label" for="desertion-started">{{=T('students started')}}</label>
                <div class="controls">
                    <input type="text" id="desertion-started"
                    name="desertion-started" placeholder="{{=T('students started')}}">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="desertion-gone">{{=T('students gone')}}</label>
                <div class="controls">
                    <input type="text" id="desertion-gone"
                    name="desertion-gone" placeholder="{{=T('students gone')}}">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="desertion-continued">{{=T('students continued')}}</label>
                <div class="controls">
                    <input type="text" id="desertion-continued"
                    name="desertion-continued" placeholder="{{=T('students continued')}}">
                </div>
            </div>
        </div>
        <div class="modal-footer">
          <button class="btn"
                data-dismiss="modal"
                aria-hidden="true">{{=T('Close')}}</button>
          <input type="submit"
          onclick="if (
              $('#desertion-date').val()&&
              parseInt($('#desertion-started').val()) > 0 &&
              parseInt($('#desertion-continued').val()) > 0)
              return true;
                   else {
                       $('#desertion-error').show();
                       return false;
                   }
                "
              class="btn btn-primary"
                 value="{{=T('Save Changes')}}"></input>
        </div>
    </form>
</div>
<!-- log-new-metrics-activity -->
